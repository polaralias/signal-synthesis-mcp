// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Connection {
  id              String           @id @default(uuid())
  name            String
  serverType      String           @map("server_type") // 'financial-mcp'
  config          Json             // Config settings (non-sensitive)
  isActive        Boolean          @default(true) @map("is_active")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  sessions        Session[]
  credentials     AuthCredential[]
  auditLogs       AuditLog[]

  @@map("connections")
}

model Session {
  id              String    @id @default(uuid())
  connectionId    String    @map("connection_id")
  tokenHash       String    @map("token_hash") // Argon2 hash of the session access token
  createdAt       DateTime  @default(now()) @map("created_at")
  expiresAt       DateTime  @map("expires_at")
  lastUsedAt      DateTime  @default(now()) @map("last_used_at")
  revokedAt       DateTime? @map("revoked_at")

  connection      Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@map("sessions")
}

model AuthCredential {
  id              String   @id @default(uuid())
  connectionId    String   @map("connection_id")
  provider        String   // 'alpaca', 'polygon', 'fmp', 'finnhub'
  encryptedSecret String   // Envelope encrypted secret
  iv              String   // Initialization vector
  authTag         String   // GCM Auth Tag
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  connection      Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@map("auth_credentials")
}

model AuditLog {
  id              String   @id @default(uuid())
  connectionId    String?  @map("connection_id")
  sessionId       String?  @map("session_id")
  action          String
  metadata        Json?
  timestamp       DateTime @default(now())

  connection      Connection? @relation(fields: [connectionId], references: [id])

  @@map("audit_logs")
}

model TradeSetup {
  id              String   @id @default(uuid())
  symbol          String
  setupType       String   @map("setup_type")
  triggerPrice    Float    @map("trigger_price")
  stopLoss        Float    @map("stop_loss")
  targetPrice     Float?   @map("target_price")
  confidence      Float
  reasoning       Json
  validUntil      DateTime? @map("valid_until")
  intent          String   // 'day_trade', 'swing', 'long_term'
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([symbol])
  @@index([intent])
  @@index([createdAt])
  @@map("trade_setups")
}
