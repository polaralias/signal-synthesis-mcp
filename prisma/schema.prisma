// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Connection {
  id              String           @id @default(uuid())
  displayName     String?          @map("display_name")
  configEncrypted String           @map("config_encrypted")
  configVersion   Int              @default(1) @map("config_version")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  sessions        Session[]
  authCodes       AuthCode[]
  auditLogs       AuditLog[]

  @@map("connections")
}

model AuthCode {
  id                  String    @id @default(uuid())
  codeHash            String    @unique @map("code_hash")
  connectionId        String    @map("connection_id")
  redirectUri         String    @map("redirect_uri")
  state               String
  codeChallenge       String    @map("code_challenge")
  codeChallengeMethod String    @map("code_challenge_method") // Must be S256
  expiresAt           DateTime  @map("expires_at")
  usedAt              DateTime? @map("used_at")
  createdAt           DateTime  @default(now()) @map("created_at")

  connection          Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@map("auth_codes")
}

model Session {
  id              String    @id @default(uuid())
  connectionId    String    @map("connection_id")
  tokenHash       String    @unique @map("token_hash") // SHA-256 or Argon2 hash of the access token
  createdAt       DateTime  @default(now()) @map("created_at")
  expiresAt       DateTime  @map("expires_at")
  lastUsedAt      DateTime  @default(now()) @map("last_used_at")
  revokedAt       DateTime? @map("revoked_at")

  connection      Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@map("sessions")
}

model AuditLog {
  id              String   @id @default(uuid())
  connectionId    String?  @map("connection_id")
  sessionId       String?  @map("session_id")
  action          String
  metadata        Json?
  timestamp       DateTime @default(now())

  connection      Connection? @relation(fields: [connectionId], references: [id])

  @@map("audit_logs")
}

model TradeSetup {
  id              String   @id @default(uuid())
  symbol          String
  setupType       String   @map("setup_type")
  triggerPrice    Float    @map("trigger_price")
  stopLoss        Float    @map("stop_loss")
  targetPrice     Float?   @map("target_price")
  confidence      Float
  reasoning       Json
  validUntil      DateTime? @map("valid_until")
  intent          String   // 'day_trade', 'swing', 'long_term'
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([symbol])
  @@index([intent])
  @@index([createdAt])
  @@map("trade_setups")
}
