// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Connection {
  id               String    @id @default(uuid()) @db.Uuid
  name             String    // Display name
  config           Json?     // Public config (no secrets)
  encryptedSecrets String?   @map("encrypted_secrets") // Encrypted secrets (iv:tag:ciphertext)
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  sessions         Session[]
  authCodes        AuthCode[]
  auditLogs        AuditLog[]

  @@map("connections")
}

model Client {
  clientId                String   @id @map("client_id")
  clientName              String?  @map("client_name")
  redirectUris            Json     @map("redirect_uris") // Stored as JSON array
  tokenEndpointAuthMethod String   @default("none") @map("token_endpoint_auth_method")
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  authCodes               AuthCode[]

  @@map("clients")
}

model AuthCode {
  code                String    @id
  connectionId        String    @map("connection_id") @db.Uuid
  clientId            String    @map("client_id")
  redirectUri         String    @map("redirect_uri")
  state               String?
  codeChallenge       String    @map("code_challenge")
  codeChallengeMethod String    @map("code_challenge_method") // Must be S256
  expiresAt           DateTime  @map("expires_at")
  usedAt              DateTime? @map("used_at")
  createdAt           DateTime  @default(now()) @map("created_at")

  connection          Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  client              Client     @relation(fields: [clientId], references: [clientId], onDelete: Cascade)

  @@map("auth_codes")
}

model Session {
  id              String    @id @default(uuid()) @db.Uuid
  connectionId    String    @map("connection_id") @db.Uuid
  tokenHash       String    @unique @map("token_hash") // SHA-256 or Argon2 hash of the access token
  createdAt       DateTime  @default(now()) @map("created_at")
  expiresAt       DateTime  @map("expires_at")
  lastUsedAt      DateTime  @default(now()) @map("last_used_at")
  revoked         Boolean   @default(false)

  connection      Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@map("sessions")
}

model UserConfig {
  id                String    @id @default(uuid()) @db.Uuid
  serverId          String?   @map("server_id")
  configEncrypted   String    @map("config_enc")
  configFingerprint String?   @map("config_fingerprint")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  apiKeys           ApiKey[]

  @@map("user_configs")
}

model ApiKey {
  id           String      @id @default(uuid()) @db.Uuid
  userConfigId String      @map("user_config_id") @db.Uuid
  keyHash      String      @unique @map("key_hash")
  createdIp    String?     @map("created_ip")
  lastUsedAt   DateTime?   @map("last_used_at")
  revokedAt    DateTime?   @map("revoked_at")
  createdAt    DateTime    @default(now()) @map("created_at")

  userConfig   UserConfig  @relation(fields: [userConfigId], references: [id], onDelete: Cascade)

  @@index([keyHash])
  @@map("api_keys")
}

model Cache {
  key       String   @id
  value     Json
  expiresAt DateTime @map("expires_at")

  @@map("cache")
}

model AuditLog {
  id              String   @id @default(uuid())
  connectionId    String?  @map("connection_id") @db.Uuid
  sessionId       String?  @map("session_id") @db.Uuid
  action          String
  metadata        Json?
  timestamp       DateTime @default(now())

  connection      Connection? @relation(fields: [connectionId], references: [id])

  @@map("audit_logs")
}

model TradeSetup {
  id              String   @id @default(uuid())
  symbol          String
  setupType       String   @map("setup_type")
  triggerPrice    Float    @map("trigger_price")
  stopLoss        Float    @map("stop_loss")
  targetPrice     Float?   @map("target_price")
  confidence      Float
  reasoning       Json
  validUntil      DateTime? @map("valid_until")
  intent          String   // 'day_trade', 'swing', 'long_term'
  createdAt       DateTime @default(now()) @map("created_at")

  @@index([symbol])
  @@index([intent])
  @@index([createdAt])
  @@map("trade_setups")
}
